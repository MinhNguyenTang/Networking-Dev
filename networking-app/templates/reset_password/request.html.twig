{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center align-items-center custom-registration">
        <div class="container col-lg-4 mx-auto">
            {{ form_start(requestForm) }}
                <h5><strong>Réinitialisater votre mot de passe</strong></h5>

                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
        
                <div>
                    <p class="mt-3">
                        Veuillez saisir votre adresse e-mail pour recevoir
                        un lien de réinitialisation de votre mot de passe.
                    </p>
                </div>

                {{ form_row(requestForm.email, { 'attr': { 'class' : 'form-control' } }) }}

                <button class="btn btn-primary col-md-12 mt-4">Envoyer le lien</button>
            {{ form_end(requestForm) }}
        </div>
    </div>

{% endblock %}

