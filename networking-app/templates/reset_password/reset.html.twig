{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}

<div class="d-flex justify-content-center align-items-center custom-registration">
    <div class="container col-lg-4 mx-auto">
        <h5><strong>Réinitialisation de votre mot de passe</strong></h5>
    
        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}

            <button class="btn btn-primary col-md-12 mt-4">Confirmer la réinitialisation</button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
