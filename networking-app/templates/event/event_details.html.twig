{% extends "base.html.twig" %}

{% block title %} {{ eventDetails.title }} {% endblock %}

{% block body %}

<div class="mt-5" style="margin-left: 3rem; margin-right: 3rem;">
    <div class="title">
        <h3><strong>Détails de l'événement</strong></h3>
    </div>
    <div class="col-md-8">
        <div class="col-md-4">
            {{ eventDetails.date|date("d/m/Y") }}
        </div>
        <div class="col-md-4">
            {{ eventDetails.time|date("H:i") }}
        </div>
    </div>
    <hr class="col-md-8">
    <div class="text mt-3">
        <p>Evénement proposé par : <strong>{{ eventDetails.company }}</strong></p>
    </div>

    <div class="col-md-8 mt-5">
        <h5 class="mt-3"><strong>{{ eventDetails.title }}</strong></h5>
        <p>{{ eventDetails.description|raw }}</p>
    </div>
</div>

<div class="title mt-5">
    <div><h3 style="margin-left: 3rem;"><strong>A voir aussi</strong></h3></div>
</div>

<div class="d-flex justify-content-around gapped flex-wrap">
    {% for lastestEvent in lastestEvents %}
        <div class="card mt-3" style="max-width: 23rem;">
            <div class="card-header bg-white border-0">
                <h5 class="float-start mt-3"><strong>{{ lastestEvent.title }}</strong></h5>
                <p class="float-end mt-3">{{ lastestEvent.company }}</p>
            </div>
            <div class="card-body">
                <div class="card-text">
                    <p>{{ lastestEvent.description|raw }}</p>
                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <p>{{ lastestEvent.date|date("d/m/Y") }} | {{ lastestEvent.time|date("H:i") }}</p>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}